<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="#000000"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/camera_preview_parent"
        android:layout_width="@dimen/camera_preview_width"
        android:layout_height="@dimen/camera_preview_height">

        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>

        <FrameLayout
            android:id="@+id/above_camera_preview_letterbox"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/camera_letterbox_cover_height"
            android:background="#00FF00"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Position the 5 enemy hero portraits so that they fill the box below."
                android:textColor="#ffffff"
                android:textSize="@dimen/large_text"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/below_camera_preview_letterbox"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/camera_letterbox_cover_height"
            android:background="#FF0000"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical" >

        <ImageButton
            android:id="@+id/button_capture"
            android:layout_width="@dimen/camera_buttons_width"
            android:layout_height="@dimen/camera_buttons_width"
            android:onClick="capturePhoto"
            android:src="@android:drawable/ic_menu_camera"
            android:background="#00000000"/>

        <ImageButton
            android:id="@+id/button_confirm"
            android:layout_width="@dimen/camera_buttons_width"
            android:layout_height="@dimen/camera_buttons_width"
            android:onClick="confirmPhoto"
            android:src="@android:drawable/ic_media_play"
            android:background="#00000000"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/button_take_again"
            android:layout_width="@dimen/camera_buttons_width"
            android:layout_height="@dimen/camera_buttons_width"
            android:onClick="takePhotoAgain"
            android:src="@android:drawable/ic_menu_revert"
            android:background="#00000000"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>