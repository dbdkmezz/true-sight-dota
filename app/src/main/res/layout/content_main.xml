<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Ui.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/layout_photo_and_info"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="#FFFFFF"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_top"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/text_image_debug"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:singleLine="false"
                        android:visibility="gone" />

                </LinearLayout>

            </FrameLayout>

            <fragment
                android:id="@+id/fragment_found_heroes"
                android:name="com.carver.paul.dotavision.Ui.HeroesDetected.HeroesDetectedFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />

            <TextView
                android:id="@+id/text_opening_tip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="@string/opening_tip"
                android:textSize="@dimen/medium_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_counter_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_custom_toggler"
                    android:onClick="counterPickerButton"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/counter_picker"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/button_hero_abilities"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_custom_toggler"
                    android:onClick="heroAbilitiesButton"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/hero_abilities"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"/>

            </LinearLayout>

            <fragment
                android:id="@+id/fragment_ability_info"
                android:name="com.carver.paul.dotavision.Ui.AbilityInfo.AbilityInfoFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <fragment
                android:id="@+id/fragment_counter_picker"
                android:name="com.carver.paul.dotavision.Ui.CounterPicker.CounterPickerFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fab_diameter"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
